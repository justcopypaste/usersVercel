<!-- HEAD -->
{% include "templates/head.njk" %}

<body>
    <div class="container pb-4">
      <h1 class="my-4">Modificar usuario</h1>
      <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <form action="/usuarios/modificar" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name" class="form-label">Id</label>
                        <input
                        type="number"
                        name="id"
                        value="{{user.id}}"
                        placeholder="Ingresar id..."
                        class="form-control"
                        required="true"
                        readonly
                        />
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Nombre</label>
                        <input
                        type="text"
                        name="name"
                        value="{{user.name}}"
                        placeholder="Ingresar nombre..."
                        class="form-control"
                        required="true"
                        />
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Apellido</label>
                        <input
                        type="text"
                        name="surname"
                        value="{{user.surname}}"
                        placeholder="Ingresar apellido..."
                        class="form-control"
                        required="true"
                        />
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Avatar</label>
                        <input id="image" name="avatar" type="file" class="form-control"/>
                    </div>
                    <button type="submit" id="button" class="btn btn-success">
                        Modificar
                    </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <a href="/usuarios" class="btn btn-primary">Volver</a>
</div> 